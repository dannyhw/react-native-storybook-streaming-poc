{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "moduleResolution": "bundler",
    "module": "esnext",
    "target": "esnext",
    "allowImportingTsExtensions": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": [
    "./.rnstorybook/*.ts",
    "./.rnstorybook/*.tsx",
    "./.storybook/*.tsx",
    "./.storybook/*.ts",
    "./**/*.ts",
    "./**/*.tsx"
  ]
}
